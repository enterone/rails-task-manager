<h1>My tasks</h1>
<ul id="tasks">
<% @tasks.each do |task|%>
  <li><%if task.completed == false %>
    <input type="checkbox" name="checkbox">
    <% else%>
    <input type="checkbox" name = "checkbox" checked>
    <%end%>
    <%= link_to task.name, task_path(task) %></li>
    <% end %>
</ul>
<%= link_to "Add a new task", :new %></li>




